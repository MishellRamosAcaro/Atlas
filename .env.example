# Database
POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=atlas
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/atlas

# JWT - MUST change in production
JWT_SECRET_KEY=change-me-in-production

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Environment: dev | prod
ENV=dev

# CORS - comma-separated origins in prod (e.g. https://app.example.com)
CORS_ORIGINS=*

# Cookie - set COOKIE_SECURE=false for local HTTP dev
COOKIE_SECURE=true

# DBeaver (optional)
DBEAVER_DEFAULT_EMAIL=admin@atlas.com
DBEAVER_DEFAULT_PASSWORD=admin
